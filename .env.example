# ============================================
# CarveStack - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control
# ============================================

# ── App Configuration ──────────────────────────
VITE_APP_NAME=CarveStack
VITE_APP_URL=http://localhost:5173
VITE_APP_ENV=development

# ── Firebase Configuration ─────────────────────
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# ── Backend API ────────────────────────────────
VITE_API_BASE_URL=http://localhost:4000/v1

# ── Stripe (Client-Side) ──────────────────────
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ── AI / Model Integration ─────────────────────
VITE_OPENAI_API_KEY=your_openai_api_key
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key
VITE_GOOGLE_AI_API_KEY=your_google_ai_api_key

# ── Feature Flags ──────────────────────────────
VITE_ENABLE_AI_GENERATION=false
VITE_ENABLE_SUBSCRIPTIONS=false
VITE_ENABLE_ANALYTICS=false

# ============================================
# BACKEND ENVIRONMENT VARIABLES (for backend/)
# ============================================

# ── Server ─────────────────────────────────────
# PORT=4000
# NODE_ENV=development

# ── Database ───────────────────────────────────
# DATABASE_URL=postgresql://user:password@localhost:5432/carvestack

# ── Firebase Admin ─────────────────────────────
# FIREBASE_PROJECT_ID=your_project_id
# FIREBASE_CLIENT_EMAIL=your_client_email
# FIREBASE_PRIVATE_KEY=your_private_key

# ── Stripe (Server-Side) ──────────────────────
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
# STRIPE_PRICE_PRO=price_your_pro_price_id
# STRIPE_PRICE_TEAM=price_your_team_price_id

# ── Security ───────────────────────────────────
# JWT_INTERNAL_SECRET=your_jwt_secret
# CORS_ORIGIN=http://localhost:5173
